<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="info.yymh.blogmanager.dao.CommentsDao">
    <insert id="postComments" parameterType="string" useGeneratedKeys="true" keyProperty="id">
        insert into comments (comments, userId) VALUE (#{comments},#{userId})
    </insert>
    <delete id="deleteComments" parameterType="string">
        delete from comments where id=#{id}
    </delete>
    <select id="queryComments" resultType="hashmap">
    select concat(comments.id) id, articles.title article,user.name userName, comments, commentsDate, concat(userId),
           concat(articlesId)
    from
        comments left
        join articles   on
           comments.articlesId=articles.id  left join user on comments.userId=user.id
    </select>
</mapper>